<% layout("layouts/boilerplate") %>
<h1>REGISTER!</h1>
<form action="/register" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" placeholder="Insert a username" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" placeholder="Insert an email" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" placeholder="Insert a password"
            required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>