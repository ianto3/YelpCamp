<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground's name</label>
                    <!-- by adding name campground[title] it will create an object "campground" in req.body 
                        with properties title and next up location -->
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        placeholder="Insert a name" value="<%= campground.title %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Campground's location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        placeholder="Insert a location" value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Campground's Image</label>
                    <input class="form-control" type="text" id="image" name="campground[image]"
                        placeholder="Insert an image URL" value="<%= campground.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground's price</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>">
                        <span class="input-group-text" id="price-label">â‚¬</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Campground's description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        placeholder="Insert a description"><%= campground.description %></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
            <a href="/campgrounds/<%= campground._id%>">Back</a>
        </div>
    </div>